{
  "name": "@tillhub/vue-search-filter",
  "version": "1.7.1",
  "description": "Search input field widht dropdown for filters",
  "author": "Quynh To Tuan <quynh.totuan@gmail.com>",
  "license": "MIT",
  "repository": "tillhub/vue-search-filter",
  "private": false,
  "main": "./dist/vue-search-filter.common.js",
  "files": [
    "dist/*",
    "src/*",
    "*.json",
    "*.js"
  ],
  "scripts": {
    "storybook": "start-storybook -p 9001 -c .storybook",
    "serve": "vue-cli-service serve ./example/main.js",
    "build:lib": "vue-cli-service build --target lib --name vue-search-filter src/index.vue",
    "build": "npm run clean && npm run build:lib",
    "clean": "rimraf dist",
    "lint": "vue-cli-service lint",
    "semantic-release": "semantic-release",
    "precommit": "git add .",
    "commit": "npm run precommit && git-cz"
  },
  "dependencies": {
    "@tillhub/vue-date-picker": "^1.10.0",
    "date-fns": "^1.30.1",
    "just-safe-get": "^1.3.0"
  },
  "peerDependencies": {
    "vue": "^2.5.2",
    "element-ui": "^2.3.6"
  },
  "devDependencies": {
    "@babel/core": "^7.2.2",
    "@semantic-release/changelog": "^3.0.0",
    "@semantic-release/git": "^7.0.4",
    "@semantic-release/github": "^5.0.6",
    "@semantic-release/npm": "^5.0.4",
    "@storybook/addon-actions": "^4.1.7",
    "@storybook/vue": "^4.1.7",
    "@vue/cli-plugin-babel": "^3.3.0",
    "@vue/cli-plugin-eslint": "^3.3.0",
    "@vue/cli-service": "^3.3.0",
    "@vue/eslint-config-standard": "^4.0.0",
    "babel-loader": "^8.0.5",
    "babel-preset-vue": "^2.0.2",
    "commitizen": "^3.0.5",
    "conventional-changelog-cli": "^2.0.5",
    "cz-conventional-changelog": "^2.1.0",
    "element-ui": "^2.4.11",
    "eslint-plugin-vue": "^5.1.0",
    "gh-pages": "^1.2.0",
    "rimraf": "^2.6.3",
    "semantic-release": "^15.9.17",
    "validate-commit-msg": "^2.14.0",
    "vue": "^2.5.22",
    "vue-loader": "^15.5.1",
    "vue-template-compiler": "^2.5.22"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    },
    "validate-commit-msg": {
      "types": "conventional-commit-types",
      "helpMessage": "Use \"npm run commit\" instead, we use conventional-changelog format :) (https://github.com/commitizen/cz-cli)"
    }
  },
  "release": {
    "verifyConditions": [
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/git"
    ],
    "prepare": [
      "@semantic-release/npm",
      "@semantic-release/changelog",
      {
        "path": "@semantic-release/git",
        "assets": [
          "dist",
          "package.json",
          "package-lock.json",
          "src",
          "CHANGELOG.md"
        ],
        "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
      }
    ],
    "publish": [
      "@semantic-release/npm",
      "@semantic-release/github"
    ]
  }
}
